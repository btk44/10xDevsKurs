---
import Layout from "../../layouts/Layout.astro";
import UpdatePasswordForm from "../../components/Auth/UpdatePasswordForm";

// In a real implementation, we would validate the token here
const token = Astro.url.searchParams.get("token");
const isValidToken = !!token; // Simplified validation, will be implemented in the next step
---

<Layout title="Update Password | Finance Tracker">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white p-8 border border-gray-200 rounded-lg shadow-md">
      <h1 class="text-2xl font-bold text-center mb-6">Set New Password</h1>

      {
        isValidToken ? (
          <UpdatePasswordForm client:load />
        ) : (
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <p>Invalid or expired password reset link. Please request a new password reset.</p>
            <div class="mt-4">
              <a href="/auth/reset-password" class="font-medium text-indigo-600 hover:text-indigo-500">
                Request new password reset
              </a>
            </div>
          </div>
        )
      }
    </div>
  </div>
</Layout>
